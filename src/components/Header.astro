---
import { SITE_TITLE } from '../consts';
---

<!-- Dock Navigation Bar -->
<nav class="fixed bottom-4 left-1/2 -translate-x-1/2 z-50
           backdrop-blur-md
           px-4 py-2 rounded-full border
           shadow-lg flex items-center gap-2 dock-nav">

  <!-- Home -->
  <a href="/"
     class="p-2 rounded-full dock-icon-light dock-icon-dark
            transition-colors duration-200 group relative">
    <svg class="w-5 h-5 dock-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m3 12 2-2m0 0 7-7 7 7M5 10v10a1 1 0 0 0 1 1h3m10-11 2 2m-2-2v10a1 1 0 0 1-1 1h-3m-6 0a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1m-6 0h6"/>
    </svg>
    <!-- Tooltip -->
    <span class="absolute -top-12 left-1/2 -translate-x-1/2 px-2 py-1 bg-white
                 text-gray-900 text-sm rounded-lg shadow-lg border border-gray-200
                 opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap">
      Home
    </span>
  </a>

  <!-- Blog -->
  <a href="/blog"
     class="p-2 rounded-full dock-icon-light dock-icon-dark
            transition-colors duration-200 group relative">
    <svg class="w-5 h-5 dock-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v1m2 13a2 2 0 0 1-2-2V7m2 13a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
    </svg>
    <!-- Tooltip -->
    <span class="absolute -top-12 left-1/2 -translate-x-1/2 px-2 py-1 bg-white
                 text-gray-900 text-sm rounded-lg shadow-lg border border-gray-200
                 opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap">
      Blog
    </span>
  </a>

  <!-- About -->
  <a href="/about"
     class="p-2 rounded-full dock-icon-light dock-icon-dark
            transition-colors duration-200 group relative">
    <svg class="w-5 h-5 dock-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 1 1-8 0 4 4 0 0 1 8 0zM12 14a7 7 0 0 0-7 7h14a7 7 0 0 0-7-7z"/>
    </svg>
    <!-- Tooltip -->
    <span class="absolute -top-12 left-1/2 -translate-x-1/2 px-2 py-1 bg-white
                 text-gray-900 text-sm rounded-lg shadow-lg border border-gray-200
                 opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap">
      About
    </span>
  </a>

  <!-- Separator -->
  <div class="w-px h-6 bg-gray-300 dark:bg-gray-600 mx-1"></div>

  <!-- GitHub -->
  <a href="https://github.com/soulkill3r"
     target="_blank"
     class="p-2 rounded-full dock-icon-light dock-icon-dark
            transition-colors duration-200 group relative">
    <svg class="w-5 h-5 dock-icon" fill="currentColor" viewBox="0 0 24 24">
      <path d="M12 0C5.374 0 0 5.373 0 12 0 17.302 3.438 21.8 8.207 23.387c.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0 1 12 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.30 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
    </svg>
    <!-- Tooltip -->
    <span class="absolute -top-12 left-1/2 -translate-x-1/2 px-2 py-1 bg-white
                 text-gray-900 text-sm rounded-lg shadow-lg border border-gray-200
                 opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap">
      GitHub
    </span>
  </a>

  <!-- LinkedIn -->
  <a href="https://linkedin.com"
     target="_blank"
     class="p-2 rounded-full dock-icon-light dock-icon-dark
            transition-colors duration-200 group relative">
    <svg class="w-5 h-5 dock-icon" fill="currentColor" viewBox="0 0 24 24">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
    </svg>
    <!-- Tooltip -->
    <span class="absolute -top-12 left-1/2 -translate-x-1/2 px-2 py-1 bg-white
                 text-gray-900 text-sm rounded-lg shadow-lg border border-gray-200
                 opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap">
      LinkedIn
    </span>
  </a>

  <!-- X (Twitter) -->
  <a href="https://x.com/__reho"
     target="_blank"
     class="p-2 rounded-full dock-icon-light dock-icon-dark
            transition-colors duration-200 group relative">
    <svg class="w-5 h-5 dock-icon" fill="currentColor" viewBox="0 0 24 24">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
    </svg>
    <!-- Tooltip -->
    <span class="absolute -top-12 left-1/2 -translate-x-1/2 px-2 py-1 bg-white
                 text-gray-900 text-sm rounded-lg shadow-lg border border-gray-200
                 opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap">
      X (Twitter)
    </span>
  </a>

  <!-- Email -->
  <a href="mailto:hello@reho.dev"
     class="p-2 rounded-full dock-icon-light dock-icon-dark
            transition-colors duration-200 group relative">
    <svg class="w-5 h-5 dock-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
    </svg>
    <!-- Tooltip -->
    <span class="absolute -top-12 left-1/2 -translate-x-1/2 px-2 py-1 bg-white
                 text-gray-900 text-sm rounded-lg shadow-lg border border-gray-200
                 opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap">
      Email
    </span>
  </a>

  <!-- Separator -->
  <div class="w-px h-6 bg-gray-300 dark:bg-gray-600 mx-1"></div>

  <!-- Theme Toggle -->
  <button class="p-2 rounded-full dock-icon-light dock-icon-dark
                 transition-colors duration-200 group relative"
          onclick="
            if (document.documentElement.classList.contains('dark')) {
              document.documentElement.classList.remove('dark');
              localStorage.theme = 'light';
            } else {
              document.documentElement.classList.add('dark');
              localStorage.theme = 'dark';
            }
          ">
    <!-- Theme toggle icon (contrast/adjust) -->
    <svg class="w-5 h-5 dock-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
      <path fill="currentColor" d="M12 7a5 5 0 100 10V7z"/>
    </svg>
    <!-- Tooltip -->
    <span class="absolute -top-12 left-1/2 -translate-x-1/2 px-2 py-1 bg-white
                 text-gray-900 text-sm rounded-lg shadow-lg border border-gray-200
                 opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap">
      Toggle Theme
    </span>
  </button>
</nav>

<style>
  /* Dock navigation custom colors */
  .dock-nav {
    background-color: rgba(230, 228, 224, 0.9); /* Light mode: same as page background */
    border-color: #9ca3af; /* Light mode: gray-400 equivalent */
  }

  :global(.dark) .dock-nav {
    background-color: rgba(30, 30, 30, 0.9); /* Dark mode: lighter than pure black */
    border-color: #4b5563; /* Dark mode: gray-600 equivalent */
  }

  /* Custom hover colors */
  .dock-nav .dock-icon-light {
    transition: background-color 0.2s;
  }

  .dock-nav .dock-icon-light:hover {
    background-color: rgba(200, 198, 194, 0.8); /* Light mode: slightly darker */
  }

  :global(.dark) .dock-nav .dock-icon-dark:hover {
    background-color: rgba(60, 60, 60, 0.8); /* Dark mode: lighter gray */
  }

  /* Icon colors */
  .dock-icon {
    color: #000000; /* Light mode: black icons */
  }

  :global(.dark) .dock-icon {
    color: #ffffff; /* Dark mode: white icons */
  }
</style>

